---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<main class="flex-1 h-screen p-8 content-swap load-animation">
  <h1 class="text-3xl font-bold text-light-accent dark:text-white">{title}</h1>
  <div class="mt-8">
    <slot />
  </div>
</main>

<style>
  .content-swap {
    animation: slide-in 0.5s ease-in-out;
  }

  @keyframes slide-in {
    from {
      transform: translateX(30px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .load-animation {
    animation: fade-in 0.5s ease-in-out 0.15s backwards;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
